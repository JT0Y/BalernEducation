<div class="box">
  <p id="notice"><%= notice %></p>

  <h1>All Class Periods</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Start Time</th>
        <th>Lead Teacher</th>
        <th>Class Name</th>      
        <th>Teaching Assistant</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= will_paginate @appointments %>

    <tbody>
      <% @appointments.each do |appointment| %>
        <tr>
          <td><%= appointment.starts_at %></td>
          <td><%= appointment.teacher.ename %></td>
          <td><%= appointment.group.name %></td>
          <td><%= appointment.ta %></td>
          <td><%= appointment.note %></td>
          <td><%= link_to 'Show', appointment %></td>
          <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
          <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <center>
    <%= will_paginate @students %>
  </center>
  <br />

  <%= link_to 'New Appointment', new_appointment_path, class: "btn btn-default" %>
  <%= link_to 'All Classes', groups_path, class: "btn btn-default" %>
</div>