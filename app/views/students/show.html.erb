<% page_header @student.ename %>
<p id="notice"><%= notice %></p>
	<div class="box col-xs-4">
		<p>
		  <strong><%= t('.class_name') %>:</strong>
		  <%= link_to @student.group.name, @student.group %>
		</p>
		<p>
		  <strong><%= t('.contract') %>:</strong>
		  <%= @student.contract_start %>
		</p>
		<p>
		  <strong><%= t('.length') %>:</strong>
		  <%= @student.contract_length %>
		</p>

		<p>
		  <strong><%= t('.points') %>:</strong>
		  <%= @student.points %>
		</p>
		<br />
		<%= link_to 'Back', students_path, class: "btn btn-primary" %>
		<%= link_to 'Edit', edit_student_path(@student), class: "btn btn-default" %>
	</div>

	<div class="col-xs-1"></div>

	<div class="box col-xs-7">
	  <h2>
	  	<%= @student.cname %>
	  	<%= image_tag @student.avatar.url(:thumb), class: "img-rounded pull-right" %>
		</h2>
<br />



		<p>
		  <strong><%= t('.dob') %>:</strong>
		  <%= @student.dob %>
		</p>

		<p>
		  <strong><%= t('.email') %>:</strong>
		  <%= @student.email %>
		</p>

		<p>
		  <strong><%= t('.enumber') %>:</strong>
		  <%= @student.emergency_contact %>
		</p>

		<p>
		  <strong><%= t('.address') %>:</strong>
		  <%= @student.address %>
		</p>
	</div>