<div class="box">
    <h1>
      <div class="page-header">
        Viewing All <%= @groups.count %> Classes
      </div>
    </h1>

    <% @groups.each do |group| %>
        <div class="box">
        <strong>Class Name:</strong> <%= link_to group.name, group %><br />
        <strong>Curriculum: </strong><%= group.school %> Class<br />
        <strong>Number of Students</strong>: <%= group.students.count %><br>
        <strong>Scheduled Periods</strong>: <%= group.students.count %><br>
        
        <% if current_user.admin? %>
                <%= link_to 'Add New Period', new_event_path %> |
                <%= link_to 'Edit', edit_group_path(group) %> |
                <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %><br>
        <% end %>
        </div>
    <% end %>

    <br>
    <%= link_to 'Add New Class', new_group_path, class: "btn btn-default"  %>
    <%= link_to 'Scheduled Classes', events_path, class: "btn btn-default"  %>
</div>
