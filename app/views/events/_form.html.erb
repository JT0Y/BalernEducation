<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Class_Name %>:<br />
    <%= f.collection_select(:group_id, Group.all, :id, :name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.select :title, options_for_select(%w[English_Class Drum_Class English_Club Drum_Open HOLIDAY Demo_Class]) %>
  </div>
  <div Class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="form-group">
    <%= f.label :Lead_teacher %><br>
    <%= f.collection_select(:teacher_id, Teacher.all, :id, :ename, prompt: true) %>
  </div>
  <div class="form-group">
    <%= f.label :Teaching_Assistant %><br>
    <%= f.collection_select(:ta, Teacher.all, :ename, :ename, prompt: true) %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Canel', events_path, class: "btn btn-danger" %>
  </div>
<% end %>
