<% page_header t('.header') %>

<div class="box">
          
<div id='calendar'></div>

<br />
</div>

<br />
<hr>
<br />

<% if current_user && current_user.admin? %>
<div class="box">
<!-- ADMIN Options -->


  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Class Name</th>
        <th>Teachers</th>
        <th>Start time</th>
        <th>End time</th>
        <% if current_user.admin? %>
        <th colspan="2">Admin</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= link_to event.group.name, event %></td>
          <td><%= event.teacher.ename %> & <%= event.ta %></td>
          <td><%= event.start_time %></td>
          <td><%= event.end_time %></td>
          <td>
            <%= link_to edit_event_path(event), id: "edit" do %>
              <i class="fa fa-pencil-square-o"></i>
            <% end %>
          </td>
          <td>
            <%= link_to event, method: :delete, data: { confirm: 'Are you sure?' }, id: "delete" do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />

  <%= link_to t('.newclass'), new_event_path, class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
<br />
